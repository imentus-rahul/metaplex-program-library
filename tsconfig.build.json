{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES5",
    "declaration": true,
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "downlevelIteration": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "module": "commonjs"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist", "build", "lib"]
}
